<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/demo_lay1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="识别演示"
            android:layout_centerInParent="true"
            android:layout_marginTop="5dp"
            android:textSize="20sp"
            android:layout_marginLeft="100dp"
            android:textColor="#000000"/>

        <ImageButton
            android:id="@+id/demo_bt"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="280dp"
            android:background="@drawable/fabu2"
            android:textSize="15sp" />

    </RelativeLayout>

    <ImageView
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:id="@+id/demo_pic"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_below="@+id/demo_lay1"
        />

    <RelativeLayout
        android:id="@+id/demo_lay2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp">

        <TextView
            android:id="@+id/sbjg"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="识别结果:"
            android:layout_centerInParent="true"
            android:layout_marginTop="5dp"
            android:textSize="20sp"
            android:layout_marginLeft="100dp"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/res_num"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/sbjg"
            android:text="null"
            android:textColor="#15226C"
            android:textSize="20sp" />

    </RelativeLayout>

    <ImageView
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:id="@+id/res_pic"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_below="@+id/demo_lay1"
        />


</LinearLayout>