<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/account_bac">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/weather_layout"
        android:scrollbars="none"
        android:overScrollMode="never">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/text_view1"
                android:layout_width="80dp"
                android:layout_height="20dp"
                android:layout_marginTop="48dp"
                android:text="    Profile"
                android:textColor="#ffffff"
                android:textSize="18dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/ok"
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:layout_marginTop="350dp"
                android:layout_marginEnd="40dp"
                android:background="@drawable/ok"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_view1" />

            <ImageButton
                android:id="@+id/message"
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:layout_marginTop="350dp"
                android:background="@drawable/message"
                app:layout_constraintEnd_toStartOf="@+id/ok"
                app:layout_constraintHorizontal_bias="0.962"
                app:layout_constraintStart_toEndOf="@+id/like"
                app:layout_constraintTop_toBottomOf="@+id/text_view1" />

            <ImageButton
                android:id="@+id/like"
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="350dp"
                android:background="@drawable/like"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/message"
                app:layout_constraintTop_toBottomOf="@+id/text_view1" />

            <TextView
                android:id="@+id/nickname_text"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_marginTop="28dp"
                android:text="Barbara Andrews"
                android:textColor="#000"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.578"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/message" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="20dp"
                android:layout_height="25dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/pin"
                app:layout_constraintEnd_toStartOf="@+id/location_text"
                app:layout_constraintHorizontal_bias="0.948"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/nickname_text" />

            <TextView
                android:id="@+id/location_text"
                android:layout_width="120dp"
                android:layout_height="20dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="108dp"
                android:text="Switzerland"
                android:textColor="#b7c4cb"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/nickname_text" />

            <TextView
                android:id="@+id/posts_text"
                android:layout_width="60dp"
                android:layout_height="30sp"
                android:layout_marginTop="20dp"
                android:text="486"
                android:textColor="#323E46"
                android:textSize="24sp"
                app:layout_constraintEnd_toStartOf="@+id/following_text"
                app:layout_constraintHorizontal_bias="0.493"
                app:layout_constraintStart_toEndOf="@+id/followers_text"
                app:layout_constraintTop_toBottomOf="@+id/imageView2" />

            <TextView
                android:id="@+id/followers_text"
                android:layout_width="60dp"
                android:layout_height="30sp"
                android:layout_marginStart="76dp"
                android:layout_marginTop="20dp"
                android:text="2,4K"
                android:textColor="#323E46"
                android:textSize="24sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView2" />

            <TextView
                android:id="@+id/following_text"
                android:layout_width="60dp"
                android:layout_height="30sp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="56dp"
                android:text="1,4K"
                android:textColor="#323E46"
                android:textSize="24sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView2" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="60sp"
                android:layout_height="15sp"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="12dp"
                android:text="Followers"
                android:textSize="10sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/followers_text"
                app:layout_constraintTop_toBottomOf="@+id/followers_text"
                app:layout_constraintVertical_bias="0.006" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="60sp"
                android:layout_height="15sp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="20dp"
                android:text="Posts"
                android:textSize="10sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/posts_text"
                app:layout_constraintTop_toBottomOf="@+id/posts_text"
                app:layout_constraintVertical_bias="0.021" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="60sp"
                android:layout_height="15sp"
                android:layout_marginTop="12dp"
                android:text="Followings"
                android:textSize="10sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/following_text"
                app:layout_constraintTop_toBottomOf="@+id/following_text"
                android:layout_marginBottom="20dp"
                app:layout_constraintVertical_bias="0.021"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>