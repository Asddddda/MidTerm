<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="30dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

   <RelativeLayout
       android:id="@+id/lay1"
       android:layout_marginBottom="30dp"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">

       <RelativeLayout
           android:id="@+id/top_rela2"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="50dp"
           app:layout_constraintTop_toTopOf="parent">

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="30sp"
               android:layout_centerHorizontal="true"
               android:layout_marginTop="0dp"
               android:text=""
               android:textColor="#1C252A"
               android:textSize="20sp" />
       </RelativeLayout>

       <ImageView
           android:layout_marginLeft="0dp"
           android:layout_width="80dp"
           android:layout_marginStart="30dp"
           android:layout_below="@+id/top_rela2"
           android:layout_height="80dp"
           android:id="@+id/tx_img"/>

       <TextView
           android:id="@+id/name"
           android:layout_width="180dp"
           android:layout_height="25dp"
           android:text="匿名用户"
           android:textSize="19sp"
           android:textColor="#0E0505"
           android:layout_below="@+id/top_rela2"
           android:layout_marginLeft="20dp"
           android:layout_toRightOf="@+id/tx_img"
           android:layout_marginTop="15dp"
           />

       <TextView
           android:id="@+id/uid_tx"
           android:layout_width="180dp"
           android:layout_height="25dp"
           android:text="uid:123456"
           android:textSize="14sp"
           android:textColor="#2B2929"
           android:layout_below="@+id/name"
           android:layout_marginLeft="20dp"
           android:layout_toRightOf="@+id/tx_img"
           />

       <TextView
           android:id="@+id/fb"
           android:layout_width="80dp"
           android:layout_height="20dp"
           android:text="        6"
           android:textColor="#13736A"
           android:textSize="18sp"
           android:layout_marginLeft="30dp"
           android:layout_alignParentStart="true"
           android:layout_below="@id/tx_img"
           android:layout_marginTop="10dp"
           />
       <TextView
           android:id="@+id/ht"
           android:layout_width="80dp"
           android:layout_height="20dp"
           android:text="         6"
           android:textSize="18sp"
           android:textColor="#13736A"
           android:layout_marginLeft="20dp"
           android:layout_below="@id/tx_img"
           android:layout_centerHorizontal="true"
           android:layout_marginTop="10dp"
           />
       <TextView
           android:id="@+id/zx"
           android:layout_width="80dp"
           android:layout_height="20dp"
           android:text="        6"
           android:textSize="18sp"
           android:textColor="#13736A"
           android:layout_marginLeft="10dp"
           android:layout_below="@id/tx_img"
           android:layout_marginEnd="30dp"
           android:layout_alignParentEnd="true"
           android:layout_marginTop="10dp"
           />


       <TextView
           android:layout_width="80dp"
           android:layout_height="40dp"
           android:text="    发布数"
           android:textSize="17sp"
           android:textColor="#2E1E1E"
           android:layout_marginLeft="30dp"
           android:layout_alignParentStart="true"
           android:layout_below="@id/fb"
           />
       <TextView
           android:layout_width="80dp"
           android:layout_height="40dp"
           android:text="    回帖数"
           android:textSize="17sp"
           android:textColor="#2E1E1E"
           android:layout_marginLeft="10dp"
           android:layout_below="@id/ht"
           android:layout_centerHorizontal="true"
           />
       <TextView
           android:layout_width="80dp"
           android:layout_height="40dp"
           android:text="  自习次数"
           android:textSize="17sp"
           android:textColor="#2E1E1E"
           android:layout_marginLeft="10dp"
           android:layout_below="@id/zx"
           android:layout_marginEnd="30dp"
           android:layout_alignParentEnd="true"
           />

   </RelativeLayout>

    <RelativeLayout
        android:layout_below="@+id/lay1"
        android:id="@+id/lay3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/but1"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="40dp"
            android:background="@drawable/bianji"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_marginLeft="20dp"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="编辑资料"
            android:layout_marginRight="195dp"
            android:layout_alignParentEnd="true"
            android:textColor="#515050"
            android:textSize="19sp"/>

        </RelativeLayout>

    <RelativeLayout
        android:layout_below="@+id/lay3"
        android:id="@+id/lay4"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginStart="40dp"
            android:background="@drawable/tiezi"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_marginLeft="20dp"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的帖子"
            android:layout_marginRight="195dp"
            android:layout_alignParentEnd="true"
            android:textColor="#515050"
            android:textSize="19sp"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_below="@+id/lay4"
        android:id="@+id/lay5"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginStart="40dp"
            android:background="@drawable/settings"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_marginLeft="20dp"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="更多设置"
            android:layout_marginRight="195dp"
            android:layout_alignParentEnd="true"
            android:textColor="#515050"
            android:textSize="19sp"/>

    </RelativeLayout>

</RelativeLayout>
